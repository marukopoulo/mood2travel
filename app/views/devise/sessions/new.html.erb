
<div id = "signin">
  <div id ="signup-logo">
    <h2><img src="/images/icons/logo2.png" alt="Sign in"></h2>
  </div>

    <div id = "facebook-logo-signin">
    <a href = "/users/auth/facebook"><img src = "/images/buttons/facebook.png" alt = "facebookでログイン"></a>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , "メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true ,:size=>"32"%>
  </div>

  <div class="field">
    <%= f.label :password ,"パスワード"%><br />
    <%= f.password_field :password, autocomplete: "off",:size=>"32" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,"パスワードをブラウザに記憶"%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "サインインする" %>
    <a href  = "/users/sign_up"><p style ="margin-top:4px">はじめての方へ</p></a>
  </div>
<% end %>

</div>

